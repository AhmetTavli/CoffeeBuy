@model CoffeeBuy.Models.Cesit
@{
    ViewBag.Title = "Kahvelerde Araştırın";
}

<div class="genre">
    <h3><em>@Model.Ad</em> Kahvelerimiz</h3>

    <ul id="album-list">
        @foreach (var kahve in Model.Kahve)
        {
            <li>
                <a href="@Url.Action("Detay", new { id = kahve.KahveId })">
                    <img alt="@kahve.Baslik" src="@kahve.KahveResimUrl" />
                    <span>@kahve.Baslik</span>
                </a>
            </li>
        }
    </ul>
</div>
