@model CoffeeBuy.Models.SifreDegistirModel

@{
    ViewBag.Title = "Şifremi Unuttum";
}

<h2>Şifremi Unuttum.</h2>
<p>
    Aşağıdaki Formu Kullanarak Şifrenizi Değiştirin. 
</p>
<p>
    Yeni Şifre en az @Membership.MinRequiredPasswordLength karakter uzunluğunda olmalı.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Şifre Değişiminde Hata Oluştu. Lütfen Hatalarınızı Gözden Geçirerek Yeniden Deneyiniz.")
    <div>
        <fieldset>
            <legend>Hesap Bilgileri</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.EskiSifre)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.EskiSifre)
                @Html.ValidationMessageFor(m => m.EskiSifre)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.YeniSifre)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.YeniSifre)
                @Html.ValidationMessageFor(m => m.YeniSifre)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.SifreOnayla)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.SifreOnayla)
                @Html.ValidationMessageFor(m => m.SifreOnayla)
            </div>

            <p>
                <input type="submit" value="Şifremi Değiştir" />
            </p>
        </fieldset>
    </div>
}
