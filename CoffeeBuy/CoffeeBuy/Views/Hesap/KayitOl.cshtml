@model CoffeeBuy.Models.KayitOlModel

@{
    ViewBag.Title = "Kayit Ol";
}

<h2>Yeni Bir Hesap Oluşturun</h2>
<p>
    Aşağıdaki Formumuzu Kullanrak Ynei Bir Heasap Oluşturabilirsiniz. 
</p>
<p>
    Şifreniz en az @Membership.MinRequiredPasswordLength karakter uzunluğunda olmalıdır.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Hesap Oluşurken bazı Hatatlar Oluştu. Lütfen Hatatlarıunızı Yeniden Gözden Geçirerek Tekrar Deneyiniz.")
    <div>
        <fieldset>
            <legend>Hesap Oluşturulmasında Gerekli Bİlgiler</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.KullaniciAdi)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.KullaniciAdi)
                @Html.ValidationMessageFor(m => m.KullaniciAdi)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Sifre)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Sifre)
                @Html.ValidationMessageFor(m => m.Sifre)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.SifreOnayla)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.SifreOnayla)
                @Html.ValidationMessageFor(m => m.SifreOnayla)
            </div>

            <p>
                <input type="submit" value="Hesabı Oluştur" />
            </p>
        </fieldset>
    </div>
}
