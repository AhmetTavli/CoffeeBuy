@model CoffeeBuy.Models.GirisModel

@{
    ViewBag.Title = "Üye Girişi";
}

<h2>Üye Girişi</h2>
<p>
    Lütfen Kullanıcı Adınızı ve Şifrenizi Kullanrak Sistemimize Giriş Yapınız. Eğer Hesabınız Yoksa Sistemimize Kayıt Olunuz. @Html.ActionLink("Kayit Ol", "KayitOl")
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Oturum Açma Başarısız Oldu Lütfen Hatalarınızı Gözden Geçirerek Tekrar Deneyiniz.")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Hesap Bilgileri</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.KullaniciAdi)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.KullaniciAdi)
                @Html.ValidationMessageFor(m => m.KullaniciAdi)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Sifre)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Sifre)
                @Html.ValidationMessageFor(m => m.Sifre)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.BeniHatirla)
                @Html.LabelFor(m => m.BeniHatirla)
            </div>

            <p>
                <input type="submit" value="Giriş Yap" />
            </p>
        </fieldset>
    </div>
}
